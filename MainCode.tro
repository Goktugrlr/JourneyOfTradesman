  Clomosy.DBSQLiteQuery.SQL.Text = 
      'CREATE TABLE IF NOT EXISTS Products (ProductID INTEGER NOT NULL,ProductName TEXT NOT NULL,ProductImg TEXT,ProductPrice TEXT)';
